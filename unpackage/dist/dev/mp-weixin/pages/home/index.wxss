.content {
		height: 100%;
		background-size:750rpx;
}
.header{
		height: 180rpx;
		width: 100%;
		background-color: rgba(102,102,102,.4);
		border-radius: 90rpx;
		padding: 10rpx;
		box-sizing: border-box;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
}
.logo{
		height: 160rpx;
		width: 160rpx;
		border-radius: 50%;
		/* background-color: #007AFF; */
}
.logo image{
		width: 100%;
		height: 100%;
}
.nameWapper{
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
		height: 80rpx;
		padding: 40rpx 0;
}
.nameWapper .title{
		font-size: 16px;
		color: #fff;
}
.nameWapper .number{
		font-size: 12px;
		color: #F1F1F1;
}
.avatar{
		width: 279rpx;
		height: 93rpx;
		margin: 33.5rpx 0;
}
.avatar .item{
		width: 93rpx;
		height: 93rpx;
		border-radius: 50%;
		float: right;
		margin-right: -10rpx;
}
.avatar .item image{width: 100%;height: 100%;}
.textWapper{
		padding: 5px 20px;
		margin-top: 76rpx;
		width: 437rpx;
		height: 139rpx;
}
.textWapper image{width: 100%;height: 100%;}
.textWapper .icon{
		height: 20px;
		width: 50px;
		text-align: center;
		line-height: 20px;
		background-color: #5555ff;
		-webkit-transform: skewX(-20deg);
		        transform: skewX(-20deg);
}
.textWapper .text{
		font-size: 30px;
		font-family: Acumin Variable Concept;
		color: #fff;
}
.bottomWapper{
		background-color: #1a1c1c;
		padding: 20px;
		width: 100%;
		height: 649rpx;
		position: fixed;
		box-sizing: border-box;
		bottom: 0;
}
.bottomWapper .goodsWapper{
		height: 465.2rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-flex-wrap: wrap;
		        flex-wrap: wrap;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
}
.bottomWapper .goodsWapper .goodsItem{
		-webkit-box-flex: 1;
		-webkit-flex: 1;
		        flex: 1;
		width: 25%;
		min-width: 25%;
		max-width: 25%;
		text-align: center;
}
.bottomWapper .goodsWapper .icon{
		height: 156rpx;
		width: 156rpx;
		border-radius: 10rpx;
		padding: 23rpx;
		margin: auto;
		box-sizing: border-box;
}
.bottomWapper .goodsWapper .icon image{
		width: 32rpx;
		height: 110rpx;}
.iconHover{
		background-color: #47474d;
}
.bottomWapper .goodsWapper .name{
		color: #dedede;
		font-size: 14px;
		width: 156rpx;
		text-align: center;
}
.bottomWapper .goodsWapper .price{
		color: #dedede;
		font-size: 14px;
		width: 156rpx;
		text-align: center;
}
.payment{
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: horizontal;
		-webkit-box-direction: normal;
		-webkit-flex-direction: row;
		        flex-direction: row;
		  -webkit-box-pack: justify;
		  -webkit-justify-content: space-between;
		          justify-content: space-between;
		  margin-top: 20rpx;
}
.payment .recharge{
		background-color: #74747f;
		width: 196rpx;
		height: 47rpx;
		margin: 6rpx 0;
		padding: 0 10rpx;
		border-radius: 26rpx;
		text-align: right;
		color: #fff;
}
.payment .submit{
		width: 144rpx;
		height: 53rpx;
		background-color: #674892;
		float: right;
		border-radius: 26rpx;
		text-align: center;
		color: #fff;
}

